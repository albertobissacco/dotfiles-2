[user]
	name = Alexey Samoshkin
	email = <EMAIL>

[github]
	user = samoshkin

[core]
	excludesfiles = ~/.gitignore
	attributesfile = ~/.gitattributes
	autocrlf = input
	editor = nano
	trustctime = false

[status]
	submodulesummary = 1

[apply]
	whitespace = fix

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow
	frag = magenta # line info
	old = red # deletions
	new = green # additions
# whitespace = red reverse

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[push]
	default = upstream

[diff]
	tool = external

[difftool]
	prompt = true

[difftool "external"]
	cmd = "external_difftool.sh \"$LOCAL\" \"$REMOTE\" \"$MERGED\" \"$BASE\""

[merge]
	tool = external

[mergetool]
	trustExitCode = false
	keepBackup = false
	prompt = false

[mergetool "external"]
	trustExitCode = false
	cmd = "external_mergetool.sh \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\""

[help]
	autocorrect = 1

